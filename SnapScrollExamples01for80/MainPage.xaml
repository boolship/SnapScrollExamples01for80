<Page
    x:Class="SnapScrollExamples01for80.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnapScrollExamples01for80"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- ReSharper disable UnusedMember.Local -->

        <!--GridView-->
        <Style x:Key="MyGridViewTileStyle"  TargetType="GridViewItem">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Background" Value="DarkOliveGreen" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="TabNavigation" Value="Local" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Width" Value="120" />
            <!--<Setter Property="Height" Value="120" />
            <Setter Property="Width" Value="200" />-->
        </Style>
        <DataTemplate x:Key="MyGridViewTileTemplate">
            <Rectangle x:Name="ItemRectangle"
                       Fill="Coral"
                       Height="40" Width="80"
                       />
            <!--Height="40" Width="80", Height="80" Width="160"-->
        </DataTemplate>

        <!--ListView-->
        <Style x:Key="MyListViewTileStyle"  TargetType="ListViewItem">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Background" Value="DarkOliveGreen" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="TabNavigation" Value="Local" />
            <Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="300" />
            <!--<Setter Property="Height" Value="300" />
            <Setter Property="Width" Value="500" />-->
        </Style>
        <DataTemplate x:Key="MyListViewTileTemplate">
            <Rectangle x:Name="ItemRectangle"
                       Fill="Coral"
                       Height="160" Width="240"
                       />
            <!--Height="160" Width="240", Height="200" Width="400"-->
        </DataTemplate>

        <!--FlipView-->
        <Style x:Key="MyFlipViewTileStyle" TargetType="FlipViewItem">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="DarkOliveGreen"/>
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="TabNavigation" Value="Local" />
            <!--<Setter Property="Height" Value="???"/>
            <Setter Property="Width" Value="???"/>-->
        </Style>
        <DataTemplate x:Key="MyFlipViewTileTemplate">
            <Rectangle x:Name="ItemRectangle"
                       Fill="Coral"
                       Height="140" Width="340"
                       />
            <!--Height="140" Width="340", Height="200" Width="400"-->
        </DataTemplate>

        <!--#1 ScrollViewer Border,Grid,ScrollContentPresenter-->
        <Style x:Key="MyScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Background" Value="{StaticResource ApplicationPageBackgroundThemeBrush}"/>
            <Setter Property="BorderBrush" Value="DeepPink"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="ZoomMode" Value="Disabled"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>

            <!--TODO ItemsControl can not snap via style-->
            <Setter Property="VerticalSnapPointsAlignment" Value="Near"/>
            <Setter Property="VerticalSnapPointsType" Value="MandatorySingle"/>
            <Setter Property="HorizontalSnapPointsAlignment" Value="Near"/>
            <Setter Property="HorizontalSnapPointsType" Value="MandatorySingle"/>
        </Style>

        <!--#2 ItemsControl ItemsPresenter, ContentControl+StackPanel-->
        <Style x:Key="MyItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Width" Value="300" />
            <!--<Setter Property="Width" Value="500" />-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ItemsControl">
                        <ItemsPresenter x:Name="MyItemsPresenterTemplateUx"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <!--TODO ItemsControl can not snap via style-->
                        <!--<ItemsStackPanel x:Name="MyItemsStackPanelTemplateUx"
                                         Background="DarkOliveGreen"/>-->
                        <VirtualizingStackPanel x:Name="MyVirtualizingStackPanelTemplateUx"
                                                Background="DarkOliveGreen"/>
                        <!--<WrapGrid x:Name="MyWrapGridTemplateUx"
                                  Background="DarkOliveGreen"
                                  HorizontalChildrenAlignment="Center"/>-->
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--#2 HorizontalItemsControl ItemsPresenter, ContentControl+StackPanel-->
        <Style x:Key="MyHorizontalItemsControlStyle" TargetType="ItemsControl">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Height" Value="200" />
            <!--Property="Height" Value="300"-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ItemsControl">
                        <ItemsPresenter x:Name="MyHorizontalItemsPresenterTemplateUx"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <!--TODO ItemsControl can not snap via style-->
                        <!--<ItemsStackPanel x:Name="MyHorizontalItemsStackPanelTemplateUx"
                                         Background="DarkOliveGreen"
                                         Orientation="Horizontal"/>-->
                        <VirtualizingStackPanel x:Name="MyHorizontalVirtualizingStackPanelTemplateUx"
                                                Background="DarkOliveGreen"
                                                Orientation="Horizontal"/>
                        <!--<WrapGrid x:Name="MyHorizontalWrapGridTemplateUx"
                                  Background="DarkOliveGreen"
                                  VerticalChildrenAlignment="Center"/>-->
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--#3 Rectangle-->
        <Style x:Key="MyRectangleStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="Coral" />
            <Setter Property="Height" Value="140" />
            <Setter Property="Width" Value="240" />
            <!--<Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="400" />-->

            <Setter Property="Margin" Value="0,0,8,8" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- ReSharper restore UnusedMember.Local -->
        
        <!--FlipViewIndicator-->
        <Style x:Key="FlipViewIndicatorItemStyle" 
           TargetType="ListBoxItem">
            <!--TODO fixme008 dynamic size or wrap items-->
            <!--<Setter Property="Width" Value="48" />-->
            <!--<Setter Property="Width" Value="16" />-->
            <Setter Property="Width" Value="8" />
            <Setter Property="Height" Value="6" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver" />
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected" />
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor"
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedUnfocused">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor"
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedPressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor" 
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedPointerOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor"
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="fillColor"
                                   IsHitTestVisible="False"
                                   Fill="Gray"
                                   Margin="2,0,0,0" />
                            <!--Margin="6 0"-->
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FlipViewIndicatorStyle"
               TargetType="local:FlipViewIndicator">
            <Setter Property="ItemContainerStyle" Value="{StaticResource FlipViewIndicatorItemStyle}" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Foreground" Value="{StaticResource ListBoxForegroundThemeBrush}" />
            <Setter Property="Background" Value="{StaticResource ListBoxBackgroundThemeBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource ListBoxBorderThemeBrush}" />
            <Setter Property="BorderThickness" Value="{StaticResource ListBoxBorderThemeThickness}" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
            <Setter Property="ScrollViewer.IsHorizontalRailEnabled" Value="True" />
            <Setter Property="ScrollViewer.VerticalScrollMode" Value="Enabled" />
            <Setter Property="ScrollViewer.IsVerticalRailEnabled" Value="True" />
            <Setter Property="ScrollViewer.ZoomMode" Value="Disabled" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="TabNavigation" Value="Once" />
            <Setter Property="FontFamily" Value="{StaticResource ContentControlThemeFontFamily}" />
            <Setter Property="FontSize" Value="{StaticResource ControlContentThemeFontSize}" />

            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border x:Name="LayoutRoot"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="Disabled" />
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused" />
                                    <VisualState x:Name="Unfocused" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ScrollViewer x:Name="ScrollViewer"
                                      HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
                                      HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                      IsHorizontalRailEnabled="{TemplateBinding ScrollViewer.IsHorizontalRailEnabled}"
                                      IsVerticalRailEnabled="{TemplateBinding ScrollViewer.IsVerticalRailEnabled}"
                                      Padding="{TemplateBinding Padding}"
                                      TabNavigation="{TemplateBinding TabNavigation}"
                                      VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                      VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}" 
                                      ZoomMode="{TemplateBinding ScrollViewer.ZoomMode}">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--VerticalFlipViewIndicator-->
        <Style x:Key="VerticalFlipViewIndicatorItemStyle" 
           TargetType="ListBoxItem">
            <!--TODO fixme008 dynamic size or wrap items-->
            <Setter Property="Width" Value="6" />
            <!--<Setter Property="Height" Value="48" />-->
            <!--<Setter Property="Height" Value="16" />-->
            <Setter Property="Height" Value="8" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver" />
