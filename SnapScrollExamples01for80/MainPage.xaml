                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected" />
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor"
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedUnfocused">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor"
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedPressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor" 
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedPointerOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="fillColor"
                                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                        BeginTime="00:00:00"
                                                        Duration="0"
                                                        To="Black" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="fillColor"
                                   IsHitTestVisible="False"
                                   Fill="Gray"
                                   Margin="0,2,0,0" />
                            <!--Margin="6 0"-->
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VerticalFlipViewIndicatorStyle"
               TargetType="local:FlipViewIndicator">
            <Setter Property="ItemContainerStyle" Value="{StaticResource VerticalFlipViewIndicatorItemStyle}" />
            <Setter Property="Width" Value="16" />
            <Setter Property="Foreground" Value="{StaticResource ListBoxForegroundThemeBrush}" />
            <Setter Property="Background" Value="{StaticResource ListBoxBackgroundThemeBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource ListBoxBorderThemeBrush}" />
            <Setter Property="BorderThickness" Value="{StaticResource ListBoxBorderThemeThickness}" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Enabled" />
            <Setter Property="ScrollViewer.IsHorizontalRailEnabled" Value="True" />
            <Setter Property="ScrollViewer.VerticalScrollMode" Value="Disabled" />
            <Setter Property="ScrollViewer.IsVerticalRailEnabled" Value="True" />
            <Setter Property="ScrollViewer.ZoomMode" Value="Disabled" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="TabNavigation" Value="Once" />
            <Setter Property="FontFamily" Value="{StaticResource ContentControlThemeFontFamily}" />
            <Setter Property="FontSize" Value="{StaticResource ControlContentThemeFontSize}" />

            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border x:Name="LayoutRoot"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="Disabled" />
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused" />
                                    <VisualState x:Name="Unfocused" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ScrollViewer x:Name="ScrollViewer"
                                      HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
                                      HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                      IsHorizontalRailEnabled="{TemplateBinding ScrollViewer.IsHorizontalRailEnabled}"
                                      IsVerticalRailEnabled="{TemplateBinding ScrollViewer.IsVerticalRailEnabled}"
                                      Padding="{TemplateBinding Padding}"
                                      TabNavigation="{TemplateBinding TabNavigation}"
                                      VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                      VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}" 
                                      ZoomMode="{TemplateBinding ScrollViewer.ZoomMode}">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!--WinRT8.1 *only* Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"-->
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <!-- ReSharper disable UnusedMember.Local -->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--NormalGridView     (L-R) :: NormalListView         (U-D) :: NormalFlipView (L-R)
            VerticalGridView   (U-D) :: HorizontalListView     (L-R) :: VerticalFlipView (U-D)
            NormalScrollViewer (U-D) :: HorizontalScrollViewer (L-R) :: SnappingScrollViewer (U-D)
            TODO stuff:
            SnappingGridView   (L-R) :: SnappingListView       (U-D) :: CustomFlipView (L-R)
        -->
        <!--GridView-->
        <!--WinRT8.1 *only* ShowsScrollingPlaceholders="False"-->
        <GridView x:Name="NormalGridView"
                  Grid.Row="0"
                  Grid.Column="0"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyGridViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyGridViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  SelectionMode="None">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Vertical" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <!--GridView-->
        <!--WinRT8.1 *only* ShowsScrollingPlaceholders="False"-->
        <GridView x:Name="VerticalGridView"
                  Grid.Row="1"
                  Grid.Column="0"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyGridViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyGridViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Disabled"
                  SelectionMode="None">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <!--ListView-->
        <!--WinRT8.1 *only* ShowsScrollingPlaceholders="False"-->
        <ListView x:Name="NormalListView"
                  Grid.Row="0"
                  Grid.Column="1"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyListViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyListViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Disabled"
                  SelectionMode="None">
        </ListView>

        <!--ListView-->
        <!--WinRT8.1 *only* ShowsScrollingPlaceholders="False"-->
        <ListView x:Name="HorizontalListView"
                  Grid.Row="1"
                  Grid.Column="1"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyListViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyListViewTileStyle}"                  
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  SelectionMode="None">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <!--FlipView-->
        <FlipView x:Name="NormalFlipView"
                  Grid.Row="0"
                  Grid.Column="2"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyFlipViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyFlipViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  ScrollViewer.HorizontalScrollMode="Enabled">
        </FlipView>
        <local:FlipViewIndicator x:Name="MyFlipViewIndicatorUx"  
                                 FlipView="{Binding ElementName=NormalFlipView}"
                                 Style="{StaticResource FlipViewIndicatorStyle}"
                                 Grid.Row="0"
                                 Grid.Column="2"
                                 Visibility="Visible"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Center"
                                 Margin="8"/>
        
        <!--FlipView-->
        <FlipView x:Name="VerticalFlipView"
                  Grid.Row="1"
                  Grid.Column="2"
                  Visibility="Visible"
                  ItemTemplate="{StaticResource MyFlipViewTileTemplate}"
                  ItemContainerStyle="{StaticResource MyFlipViewTileStyle}"
                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                  BorderBrush="DeepPink"
                  BorderThickness="2"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Disabled">
            <FlipView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </FlipView.ItemsPanel>
        </FlipView>
        <local:FlipViewIndicator x:Name="MyVerticalFlipViewIndicatorUx" 
                                 FlipView="{Binding ElementName=VerticalFlipView}"
                                 Style="{StaticResource VerticalFlipViewIndicatorStyle}"
                                 Grid.Row="1"
                                 Grid.Column="2"
                                 Visibility="Visible"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Margin="8"/>
        
        <!--ScrollViewer-->
        <ScrollViewer x:Name="NormalScrollViewer"
                      Grid.Row="2"
                      Grid.Column="0"
                      Visibility="Visible"
                      Style="{StaticResource MyScrollViewerStyle}">
            <ItemsControl x:Name="MyItemsControlUx" 
                          Style="{StaticResource MyItemsControlStyle}">
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
            </ItemsControl>
        </ScrollViewer>

        <!--ScrollViewer-->
        <ScrollViewer x:Name="HorizontalScrollViewer"
                      Grid.Row="2"
                      Grid.Column="1"
                      Visibility="Visible"
                      Style="{StaticResource MyScrollViewerStyle}"
                      VerticalScrollMode="Disabled"
                      HorizontalScrollMode="Enabled">
            <ItemsControl x:Name="MyHorizontalItemsControlUx" 
                          Style="{StaticResource MyHorizontalItemsControlStyle}">
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>

                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
                <Rectangle Style="{StaticResource MyRectangleStyle}"/>
            </ItemsControl>
        </ScrollViewer>

        <!--SnappingScrollViewer1: ItemsControl Style="{StaticResource MyItemsControlStyle}" (fail)-->
        <!--SnappingScrollViewer2: StackPanel (works)-->
        <!--SnappingScrollViewer3: local:SnappingItemsControl implements IScrollSnapPointsInfo (works)-->
        <ScrollViewer x:Name="SnappingScrollViewer1"
                      Grid.Row="2"
                      Grid.Column="2"
